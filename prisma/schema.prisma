generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // IMPORTANT: relative to the prisma/ folder
  url      = "file:./dev.db"
}

model Event {
  id      String   @id @default(cuid())
  userId  String

  title   String
  startAt DateTime
  endAt   DateTime?
  allDay  Boolean  @default(false)
  notes   String?
  source  String   @default("manual")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, startAt])
}